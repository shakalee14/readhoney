extends layouts/layout

block content
  script(src="https://code.jquery.com/jquery-1.11.3.js")
  script(src="../fuzzy.js")
  
  h1= title
  h1 Booklisting 

  form(method='get')
    input#search.search.fuzzy(type="text", class="search", name='q')
    button(type='submit') Search

  ul
    for book in books
      li 
        a(href='/book/'+book.id) #{book.title} 
      li By #{book.author}
      //- li Created by #{owned_book.user_id}
      br
                
